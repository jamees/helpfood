<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MainActivity"
    >


    <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="Holaa"
            android:textSize="20sp"
        android:layout_alignBottom="@+id/photoImageViewNav"
        android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario"
            android:layout_above="@+id/nameTextView"
            android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/photoImageViewNav"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/view2Nav"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></android.support.v7.widget.CardView>


</RelativeLayout>